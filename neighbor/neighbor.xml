<?xml version="1.0" encoding="utf-8"?>
<MODULE xmlns="https://github.com/alliedtelesis/apteryx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://github.com/alliedtelesis/apteryx
	https://github.com/alliedtelesis/apteryx/releases/download/v2.04/apteryx.xsd">
	<NODE name="neighbor">
		<NODE name="ipv4" help="IPv4 neighbors">
			<NODE name="settings" help="IPv4 neighbor settings">
				<NODE name="opportunistic-nd" default="0" mode="rw" help="Opportunistic Neighbor Discovery" pattern="^(0|1)$">
					<VALUE name="disabled" value="0" help="Opportunistic Neighbor Discovery is disabled" />
					<VALUE name="enabled" value="1" help="Opportunistic Neighbor Discovery is enabled" />
				</NODE>
				<NODE name="interfaces" help="Per Interface IPv4 Neighbor Status/Setting">
					<NODE name="*" help="Interface Name">
						<NODE name="name" mode="rw" help="Interface name" />
						<NODE name="aging-timeout" default="300" mode="rw" help="Aging timeout (sec)" pattern="^{{range(0,432000)}}$" />
						<NODE name="mac-disparity" default="0" mode="rw" help="Reception of ARP packets that contain a multicast MAC address" pattern="^(0|1)$">
							<VALUE name="disabled" value="0" help="Mac-disparity is disabled" />
							<VALUE name="enabled" value="1" help="Mac-disparity is enabled" />
						</NODE>
						<NODE name="proxy-arp" default="0" mode="rw" help="Allow Proxy ARP" pattern="^(0|1|2|3)$">
							<VALUE name="disabled" value="0" help="Proxy ARP is disabled" />
							<VALUE name="enabled" value="1" help="Proxy ARP is enabled" />
							<VALUE name="local" value="2" help="Local Proxy ARP is enabled" />
							<VALUE name="both" value="3" help="Both Local Proxy ARP and Proxy ARP are enabled" />
						</NODE>
						<NODE name="optimistic-nd" default="1" mode="rw" help="Optimistic Neighbor Discovery" pattern="^(0|1)$">
							<VALUE name="disabled" value="0" help="Optimistic Neighbor Discovery is disabled" />
							<VALUE name="enabled" value="1" help="Optimistic Neighbor Discovery is enabled" />
						</NODE>
					</NODE>
				</NODE>
			</NODE>
		</NODE>
		<NODE name="ipv6" help="IPv6 neighbors">
			<NODE name="settings" help="IPv6 neighbor settings">
				<NODE name="opportunistic-nd" default="0" mode="rw" help="Opportunistic Neighbor Discovery" pattern="^(0|1)$">
					<VALUE name="disabled" value="0" help="Opportunistic Neighbor Discovery is disabled" />
					<VALUE name="enabled" value="1" help="Opportunistic Neighbor Discovery is enabled" />
				</NODE>
			</NODE>
		</NODE>
	</NODE>
</MODULE>
